{
  "dashboard": {
    "title": "AI Grading System - Overview",
    "uid": "ai-grading-overview",
    "version": 1,
    "timezone": "utc",
    "panels": [
      {
        "id": 1,
        "title": "Total Submissions",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(submissions_total)",
            "legendFormat": "Total"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Submission Rate (per minute)",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(submissions_total[5m]) * 60",
            "legendFormat": "{{language}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4}
      },
      {
        "id": 3,
        "title": "Grading Duration (p95)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, grading_duration_seconds_bucket)",
            "legendFormat": "p95"
          },
          {
            "expr": "histogram_quantile(0.50, grading_duration_seconds_bucket)",
            "legendFormat": "p50"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4}
      },
      {
        "id": 4,
        "title": "Active Users",
        "type": "stat",
        "targets": [
          {
            "expr": "active_users{role=\"student\"}",
            "legendFormat": "Students"
          },
          {
            "expr": "active_users{role=\"lecturer\"}",
            "legendFormat": "Lecturers"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 5,
        "title": "API Response Time",
        "type": "heatmap",
        "targets": [
          {
            "expr": "rate(api_request_duration_seconds_bucket[5m])",
            "legendFormat": "{{endpoint}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12}
      },
      {
        "id": 6,
        "title": "Plagiarism Checks",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(plagiarism_checks_total[5m])",
            "legendFormat": "{{result}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12}
      },
      {
        "id": 7,
        "title": "Cache Hit Ratio",
        "type": "gauge",
        "targets": [
          {
            "expr": "cache_hit_ratio",
            "legendFormat": "Hit Ratio"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0}
      },
      {
        "id": 8,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(submissions_total{status=\"error\"}[5m])",
            "legendFormat": "Errors"
          }
        ],
        "gridPos": {"h": 6, "w": 12, "x": 0, "y": 20},
        "alert": {
          "conditions": [
            {
              "evaluator": {"params": [10], "type": "gt"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "frequency": "60s",
          "handler": 1,
          "name": "High Error Rate Alert"
        }
      }
    ],
    "refresh": "10s",
    "time": {"from": "now-6h", "to": "now"}
  }
}
