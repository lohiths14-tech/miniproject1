{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "üöÄ AI Grading System (Development)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/app.py",
            "console": "integratedTerminal",
            "env": {
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1",
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": [],
            "jinja": true,
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false
        },
        {
            "name": "üîß Setup System",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/setup.py",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "üß™ Test Services",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": [
                "-v",
                "--tb=short"
            ],
            "cwd": "${workspaceFolder}",
            "justMyCode": false
        },
        {
            "name": "üè≠ Production Mode",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/app.py",
            "console": "integratedTerminal",
            "env": {
                "FLASK_ENV": "production",
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": []
        }
    ]
}