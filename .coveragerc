[run]
source = .
omit =
    */tests/*
    */test_*
    */__pycache__/*
    */venv/*
    */env/*
    */virtualenv/*
    */.tox/*
    */setup.py
    */conftest.py
    */migrations/*
    */docs/*
    */static/*
    */templates/*
    */mobile/*
    */htmlcov/*
    */build/*
    */dist/*
    */.pytest_cache/*

branch = True
parallel = True

[report]
precision = 2
show_missing = True
skip_covered = False
skip_empty = True
sort = Cover

exclude_lines =
    pragma: no cover
    def __repr__
    def __str__
    raise AssertionError
    raise NotImplementedError
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    @abstractmethod
    @abc.abstractmethod
    pass
    \.\.\.
    except ImportError:
    except ModuleNotFoundError:
    if 0:
    if False:

ignore_errors = False
fail_under = 85

[html]
directory = htmlcov
title = AI Grading System - Coverage Report

[xml]
output = coverage.xml

[json]
output = coverage.json
pretty_print = True
show_contexts = True
