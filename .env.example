# Environment Variables Configuration
# Copy this file to .env and fill in your actual values

# ============================================
# MongoDB Configuration
# ============================================

# For Local Development (MongoDB running locally)
# MONGO_URI=mongodb://localhost:27017/grading_system_dev

# For Production (MongoDB Atlas)
# Replace with your actual connection string from MongoDB Atlas
MONGO_URI=mongodb+srv://USERNAME:PASSWORD@CLUSTER.mongodb.net/grading_system?retryWrites=true&w=majority

# ============================================
# Flask Configuration
# ============================================

# Secret key for session management (generate a random string)
SECRET_KEY=your-secret-key-here-change-this

# JWT secret for token-based authentication
JWT_SECRET_KEY=your-jwt-secret-key-here-change-this

# Flask environment (development/production)
FLASK_ENV=production
FLASK_DEBUG=False

# ============================================
# Redis Configuration
# ============================================

# For Local Development
# REDIS_URL=redis://localhost:6379/0

# For Production (Redis Cloud or similar)
# REDIS_URL=redis://username:password@host:port/0

# ============================================
# Email Configuration (Optional)
# ============================================

MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# ============================================
# AI/OpenAI Configuration (Optional)
# ============================================

OPENAI_API_KEY=your-openai-api-key-here

# ============================================
# Application Settings
# ============================================

# Max file upload size (in bytes, default 16MB)
MAX_CONTENT_LENGTH=16777216

# Code execution timeout (seconds)
CODE_EXECUTION_TIMEOUT=30

# ============================================
# Security Settings
# ============================================

# Allowed origins for CORS
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# JWT token expiration (minutes)
JWT_ACCESS_TOKEN_EXPIRES=60

# ============================================
# Deployment Platform Specific
# ============================================

# Port (usually set by platform, e.g., Render, Heroku)
PORT=5000

# Workers for production (gunicorn)
WEB_CONCURRENCY=2
