[flake8]
max-line-length = 100
exclude =
    venv,
    __pycache__,
    .git,
    .github,
    htmlcov,
    .pytest_cache,
    build,
    dist,
    *.egg-info
ignore =
    E203,  # Whitespace before ':'
    W503,  # Line break before binary operator
    E501   # Line too long (handled by black)
max-complexity = 15
per-file-ignores =
    __init__.py:F401
